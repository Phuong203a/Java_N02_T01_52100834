<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15sp"
    tools:context=".MainActivity">


    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </FrameLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="336dp"
        android:layout_height="42dp"
        android:layout_marginBottom="68dp"
        android:gravity="center"

        android:text="edward_Larry"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/edtTextName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.652"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtTextJob"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_marginBottom="52dp"
        android:drawableLeft="@drawable/baseline_business_center_24"
        android:ems="10"
        android:hint=""
        android:inputType="textPersonName"
        android:text="Job"
        app:layout_constraintBottom_toTopOf="@+id/btnSave"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtTextName"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/baseline_person_24"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/edtTextPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtTextPhone"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/baseline_local_phone_24"
        android:ems="15"
        android:inputType="textPersonName"
        android:scrollbarSize="48dp"
        android:text="Phone"
        app:layout_constraintBottom_toTopOf="@+id/edtTextEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtTextEmail"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/baseline_email_24"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email"
        app:layout_constraintBottom_toTopOf="@+id/edtTextAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtTextAddress"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/baseline_map_24"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Address"
        app:layout_constraintBottom_toTopOf="@+id/edtTextLink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtTextLink"
        android:layout_width="336dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:drawableLeft="@drawable/baseline_link_24"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Link"
        app:layout_constraintBottom_toTopOf="@+id/edtTextJob"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="149dp"
        android:layout_height="57dp"
        android:layout_marginBottom="16dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="191dp"
        android:layout_height="137dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.792"
        app:srcCompat="@drawable/avt" />

    <Button
        android:id="@+id/btnCamera"
        android:layout_width="68dp"
        android:layout_height="61dp"
        android:layout_gravity="right|bottom"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#FFFFFF"
        android:drawableLeft="@drawable/baseline_photo_camera_24"
        android:text="camera"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.697"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>